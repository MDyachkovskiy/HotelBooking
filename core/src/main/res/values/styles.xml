<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="hotel_fragment_title">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">21.6dp</item>
    </style>

    <style name="rating_text">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/rating_color</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">19.2dp</item>
    </style>

    <style name="hotel_name_title">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">26.4dp</item>
    </style>

    <style name="address_title_style">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/address_text_color</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">16.8dp</item>
    </style>

    <style name="price_title_style">
        <item name="android:textSize">@dimen/text_size_30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_600</item>
        <item name="android:lineHeight">36dp</item>
    </style>

    <style name="price_description_style">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/price_description_color</item>
        <item name="fontFamily">@font/sf_pro_display_400</item>
        <item name="android:lineHeight">19.2dp</item>
    </style>

    <style name="about_hotel_title_style">
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">26.4dp</item>
    </style>

    <style name="hotel_peculiarities_style" parent="Base.Widget.Material3.Chip">
        <!-- Chip style-->
        <item name="chipBackgroundColor">@color/peculiarities_chip_background</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:paddingHorizontal">@dimen/margin_10dp_small</item>
        <item name="android:paddingVertical">@dimen/margin_5dp_small</item>
        <!-- Chip text style-->
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/peculiarities_text_color</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">19.2dp</item>
    </style>

    <style name="hotel_description_style">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/hotel_description_text</item>
        <item name="fontFamily">@font/sf_pro_display_400</item>
        <item name="android:lineHeight">19.2dp</item>
    </style>

    <style name="hotel_description_block_titles_style">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/description_details_block_title_color</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">19.2dp</item>
    </style>

    <style name="hotel_description_block_text_style">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/description_details_block_text_color</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:lineHeight">16.8dp</item>
    </style>

    <style name="booking_button_text_style">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_500</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineHeight">17.6dp</item>
    </style>

</resources>